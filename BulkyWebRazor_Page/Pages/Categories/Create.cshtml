@page
@model BulkyWebRazor_Page.Pages.Categories.CreateModel


<form method="post">
	<div class="container mt-4">
		<div class="card">
			<div class="card-body">
				<h2 class="text-primary text-center">Create Category</h2>
				<hr />
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="mb-3">
					<label asp-for="Category.Name" class="p-0"></label>
					<input asp-for="Category.Name" class="form-control" />
					<span asp-validation-for="Category.Name" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="Category.DisplayOrder" class="p-0"></label>
					<input asp-for="Category.DisplayOrder" class="form-control" />
					<span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
				</div>
				<div class="row">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-primary form-control">Create</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-page="/categories/index" class="btn btn-secondary form-control">Back to List</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>

@section Scripts
{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}

