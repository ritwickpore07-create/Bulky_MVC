@page
@model BulkyWebRazor_Page.Pages.Categories.DeleteModel

<form method="post">
	<input asp-for="Category.Id" hidden />
	<div class="container mt-4">
		<div class="card">
			<div class="card-body">
				<h2 class="text-primary text-center">Delete Category</h2>
				<hr />
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="mb-3">
					<label asp-for="Category.Name" class="p-0"></label>
					<input asp-for="Category.Name" disabled class="form-control" />
				</div>
				<div class="mb-3">
					<label asp-for="Category.DisplayOrder" class="p-0"></label>
					<input asp-for="Category.DisplayOrder" disabled class="form-control" />
				</div>
				<div class="row">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-danger form-control">Delete</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-page="/categories/index" class="btn btn-secondary form-control">Back to List</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>

